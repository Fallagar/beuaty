<% layout('/layouts/boilerplate') %>
<link rel="stylesheet" href="/ssheets/index.css" />
<div id="cluster-map"></div>

<% for(let campground of campgrounds) {%>
<div class="card mb-3 mt-3 cardHW">
  <div class="row">
    <div class="col-md-4">
      <% if(campground.images.length){ %>
      <img class="img-fluid imgHW" alt="" src="<%= campground.images[0].url %> " />
      <% } else { %>
      <img class="img-fluid" src="" alt="" />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text">
          <small class="class-muted"><%= campground.location %></small>
        </p>
        <p class="card-text"><%= campground.description.slice(0,200) %>...</p>
        <div class="d-grid">
          <a class="btn btn-primary overflow-hidden" href="campgrounds/<%=campground._id%>">Переглянути <%= campground.title %></a>
        </div>
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const campgrounds = {features: <%-JSON.stringify(campgrounds)%>}
</script>
<script src="/scripts/clusterMap.js"></script>
